<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Administraci√≥n de Usuarios</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th><input type="checkbox" class="select-all"></th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Usuario</th>
                            <th>Ultimo Ingreso</th>
                        </tr>
                        </thead>
                        <tbody rv-if="collection.length < .length">
                        <tr rv-each-user="collection.models < .models" data-toggle="edit-user" rv-data-user-id="user:id" class="cursor-pointer">
                            <th><input type="checkbox" rv-value="user:id"></th>
                            <td>{user:first_name}</td>
                            <td>{user:last_name}</td>
                            <td>{user:email}</td>
                            <td>{user:username}</td>
                            <td>{user:last_login}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix"></div>
            </div>
        </div>
    </div>
</section>